<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="top"
    android:id="@+id/list_movies"
    android:elevation="2dp"
    android:background="@drawable/bordershadow"
    android:padding="@dimen/activity_horizontal_margin">
    <ImageView
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:id="@+id/img_reader_photo"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        tools:src="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_reader_photo"
        android:layout_toEndOf="@+id/img_reader_photo"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            style="@style/TextContent.Title"
            tools:text="Captain America"
            />
        <TextView
            android:id="@+id/tv_author"
            style="@style/TextContent"
            tools:text="by Stan Lee"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_rating"
                android:drawableLeft="@drawable/ic_star_red"
                style="@style/TextContent.Release"
                tools:text="3"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_reader"
                style="@style/TextContent.Release"
                tools:text="triyono"
                android:layout_weight="2"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>