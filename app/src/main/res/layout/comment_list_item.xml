<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:id="@+id/list_comment"
    android:padding="@dimen/activity_horizontal_margin">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img_reader_photo"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        tools:src="@drawable/backcover"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_reader_photo"
        android:layout_toEndOf="@+id/img_reader_photo"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                style="@style/TextContent.Title"
                tools:text="Captain America"
                android:textColor="@color/colorWetAsphalt"
                android:paddingRight="@dimen/activity_horizontal_margin"
                />
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize="1.0"
                android:rating="2.0"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment"
            tools:text="comment bla bla bla"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />

    </LinearLayout>

</RelativeLayout>